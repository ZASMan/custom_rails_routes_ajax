<%= simple_form_for(@employee) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :position %>
    <%= f.collection_select(:employee, :project_id, Project.all, :id, :name)%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
